    "@types/blessed": "^0.1.25",
    "@types/express": "^4.17.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/ws": "^8.5.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
